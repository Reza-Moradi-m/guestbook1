rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Guestbook posts, likes, and comments
    match /guestbook/{postId} {
      // Everyone can view posts
      allow read: if true;

      // Only authenticated users can create posts
      allow create: if request.auth != null;

      // Only the owner can edit/delete their post
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;

      // Likes subcollection
      match /likes/{userId} {
        // Allow authenticated users to create or delete their own like
        allow create: if request.auth != null && request.auth.uid == userId;
        allow delete: if request.auth != null && request.auth.uid == userId;

        // Read access is public
        allow read: if true;
      }

      // Comments subcollection
      match /comments/{commentId} {
        // Everyone can view comments
        allow read: if true;

        // Only authenticated users can create comments
        allow create: if request.auth != null;

        // Only the owner can update/delete their comment
        allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      }
    }

    // User profiles
    match /users/{userId} {
      // Everyone can view profile information (public profiles)
      allow read: if true;

      // Only the user can update their profile
      allow write: if request.auth != null && request.auth.uid == userId;


      // Follow subcollection
      match /followers/{followerId} {
        allow create, delete: if request.auth != null && request.auth.uid == followerId;
        allow read: if request.auth != null; // Authenticated users can read
      }
      match /following/{followedId} {
        allow create, delete: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null; // Authenticated users can read}
    }

   match /messages/{chatId} {
    // ✅ Allow users to read and list only chats they are part of
    allow read, list: if request.auth != null && resource.data.participants.hasAny([request.auth.uid]);

    // ✅ Allow users to create a chat only if they are in `participants`
    allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;

    match /chatMessages/{messageId} {
        // ✅ Ensure users can only access chat messages in chats they are part of
        allow read, create: if request.auth != null && 
            get(/databases/$(database)/documents/messages/$(chatId)).data.participants.hasAny([request.auth.uid]);

        // ❌ Prevent direct updates or deletions
        allow update, delete: if false;
    }
}
  
  }
  }

  

