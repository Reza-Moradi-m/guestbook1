rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /guestbook/{postId} {
      allow read, write: if true;

      // Likes subcollection
      match /likes/{likeId} {
        allow read, write: if true;
      }

      // Comments subcollection
      match /comments/{commentId} {
        allow read, write: if true;
      }
    }
  }
}
